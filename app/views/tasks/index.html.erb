<h1>List all Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li style="list-style-type: none">
      <input type="checkbox" <%= 'checked' if task.completed %>> <%= link_to task.title, task_path(task) %> . <%= link_to "Delete", delete_task_path(task), method: :delete %>
    </li>
  <% end %>
</ul>
<hr>
<%= link_to "Add a new Task", tasks_new_path %>
